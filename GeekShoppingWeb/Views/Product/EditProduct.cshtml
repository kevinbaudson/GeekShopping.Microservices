@model GeekShoppingWeb.Models.ProductModel

@{
    ViewData["Title"] = "Editar Produto";
}

<h2 class="mb-4">Editar Produto</h2>

<form asp-action="EditProduct" method="post">

    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input asp-for="Price"
               type="text"
               class="form-control"
               value="@Model.Price.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" />

    </div>

    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <input asp-for="CategoryName" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Imagem (URL)</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="d-flex gap-2">

        <button type="submit" class="btn btn-success">
            <i class="fa fa-save"></i>
            Atualizar
        </button>

        <a asp-action="ProductIndex" class="btn btn-secondary">
            Voltar
        </a>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
